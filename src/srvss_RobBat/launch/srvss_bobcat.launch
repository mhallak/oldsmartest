<!-- -*- mode: XML -*- -->
<launch>

	<param name="robot_description" command="cat $(find srvss_RobBat)/urdf/BOBCAT.URDF" />
 
<!-- ros_control clam launch file -->
	<include file="$(find srvss_RobBat)/launch/srvss_bobcat_controllers.launch" />

<!-- convert joint states to TF transforms for rviz, etc -->
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
		<remap from="/joint_states" to="/srvss_bobcat/joint_states" />
	</node>

<!-- word to bobcat_body link tf publisher -->
	<node name="worltd_to_RobBat_tf_broadcaster_node" pkg="srvss_RobBat" type="world_to_RobBat_tf_broadcaster_node" respawn="false" output="screen" />
										  

<!-- tf for the front SICK sensor --> 
<!-- static_transform_publisher x y z yaw pitch roll frame_id child_frame_id period_in_ms
     Publish a static coordinate transform to tf using an x/y/z offset and yaw/pitch/roll. The period, in milliseconds, specifies how often to send a transform. 100ms (10hz) is a good value. -->
	<node pkg="tf" type="static_transform_publisher" name="sick_link_broadcaster" args="0 0 0 0 0 1.57 sick_link front_sick 100" />

<!--  -->
	<node name="srvss_RobBat_RateToEffort_node" pkg="srvss_RobBat" type="srvss_RobBat_rate2effort_node" cwd="node" output="screen" />


</launch>
