<!-- -*- mode: XML -*- -->
<launch>    


     <arg name="scen" default="scenario_1"/> 
    
     <arg name="SFDP_file_url" value="$(find SRVSS)/SFDP/test.SFDP"/>
     <arg name="resource_file_url" value="$(find SRVSS)/resource/resource_srvssDumy.xml"/>
     <arg name="scenarios_folder_url" value="$(find SRVSS)/work_space/$(arg scen)"/>
     <arg name="SFV_file_url" value="$(arg scenarios_folder_url)/scen.SFV"/>

     <node pkg="SRVSS" type="mainGen" name="SRVSS_genSFV" args="-genSFV $(arg SFDP_file_url) $(arg scenarios_folder_url) $(arg resource_file_url)" output="screen" />
     <node pkg="SRVSS" type="mainGen" name="SRVSS_genSCEN" args="-genSCEN $(arg SFV_file_url) $(arg scenarios_folder_url)" output="screen" />

</launch>
